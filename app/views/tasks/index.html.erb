<h1>All tasks</h1>

<% @tasks.each do |task| %>
  <% if task.completed  %>
    <h2><span><input type="checkbox" checked></span><%= link_to task.title, task_path(task) %></h2>
  <% else %>
    <h2><span><input type="checkbox"></span><%= link_to task.title, task_path(task) %></h2>
  <% end %>
<% end %>
<hr>
<%= link_to "Create a new task", new_path %>
